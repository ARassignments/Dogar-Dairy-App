<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/transparent">

    <Button
        android:id="@+id/modifyBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modify"
        android:layout_gravity="end"
        android:drawableEnd="@drawable/edit"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="-10dp"
        style="@style/customButton"/>

    <FrameLayout
        android:id="@+id/billLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top|center"
        android:paddingTop="60dp"
        android:paddingHorizontal="60dp"
        android:paddingBottom="60dp"
        android:orientation="vertical"
        style="@style/billBg">

        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/paid"
            android:layout_gravity="center"
            style="@style/billPaidImageDialog"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="0dp">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginRight="6dp"
                    style="@style/authLogo"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Attari"
                    android:textSize="20sp"
                    style="@style/navBoldTitle"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dairy"
                    android:textSize="20sp"
                    style="@style/navThinTitle"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="."
                    android:textSize="20sp"
                    android:layout_weight="1"
                    style="@style/navDotTitle"/>

                <TextView
                    android:id="@+id/date"
                    style="@style/billDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="02/08/2024"
                    android:textAlignment="textEnd" />

            </LinearLayout>

            <TextView
                android:id="@+id/month"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Month Paid Bill"
                android:textAlignment="center"
                android:layout_marginTop="3dp"
                style="@style/authTitle"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:layout_weight="1"
                    style="@style/billLabelDialog"/>

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Abdur Rehman"
                    android:textAlignment="textEnd"
                    android:layout_weight="1"
                    style="@style/billTextDialog"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone Number"
                    android:layout_weight="1"
                    style="@style/billLabelDialog"/>

                <TextView
                    android:id="@+id/contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="03452418563"
                    android:textAlignment="textEnd"
                    android:layout_weight="1"
                    style="@style/billTextDialog"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="From"
                    android:layout_weight="1"
                    style="@style/billLabelDialog"/>

                <TextView
                    android:id="@+id/from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01/08/2024"
                    android:textAlignment="textEnd"
                    android:layout_weight="1"
                    style="@style/billTextDialog"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To"
                    android:layout_weight="1"
                    style="@style/billLabelDialog"/>

                <TextView
                    android:id="@+id/to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="31/08/2024"
                    android:textAlignment="textEnd"
                    android:layout_weight="1"
                    style="@style/billTextDialog"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Milk Rate"
                    android:layout_weight="1"
                    style="@style/billLabelDialog"/>

                <TextView
                    android:id="@+id/milkRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs 180"
                    android:textAlignment="textEnd"
                    android:layout_weight="1"
                    style="@style/billTextDialog"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payment Method"
                    android:layout_weight="1"
                    style="@style/billLabelDialog"/>

                <TextView
                    android:id="@+id/paymentMethod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cash"
                    android:textAlignment="textEnd"
                    android:layout_weight="1"
                    style="@style/billTextDialog"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Quantity"
                    android:layout_weight="1"
                    style="@style/billLabelDialog"/>

                <TextView
                    android:id="@+id/totalQty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1Kg"
                    android:textAlignment="textEnd"
                    android:layout_weight="1"
                    style="@style/billTextDialog"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Amount"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    style="@style/billLabelDialog"/>

                <TextView
                    android:id="@+id/totalAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs 180"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="16sp"
                    android:textAlignment="textEnd"
                    android:layout_weight="1"
                    style="@style/billText"/>

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/divider"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Balanced Amount"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    style="@style/billLabelDialog"/>

                <TextView
                    android:id="@+id/balanceAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs 60"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="16sp"
                    android:textAlignment="textEnd"
                    android:layout_weight="1"
                    style="@style/billText"/>

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/divider"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Given Amount"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    style="@style/billTextDialog"/>

                <TextView
                    android:id="@+id/givenAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs 180"
                    android:textAlignment="textEnd"
                    android:layout_weight="1"
                    style="@style/billGivenAmountDialog"/>

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="-10dp"
        android:layout_marginHorizontal="30dp">

        <Button
            android:id="@+id/shareBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Share Bill"
            android:layout_marginRight="16dp"
            style="@style/flatButton"/>

        <Button
            android:id="@+id/cancelBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            style="@style/logoutButton"/>

    </LinearLayout>

</LinearLayout>